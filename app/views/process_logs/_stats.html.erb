<%= turbo_stream_from "updatelogscount" %>
<div id="logs_stats">
  <% total = logs.length %>
  <% success = logs.count { |l| l.status == "completed" } %>
  <% failed = logs.count { |l| l.status == "failed" } %>

  <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 16px; margin-bottom: 32px;">
    <div style="background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%); border-radius: 12px; padding: 16px; border: 1px solid #93c5fd;">
      <p style="color: #64748b; font-size: 14px; font-weight: 500;">Total</p>
      <p style="font-size: 28px; font-weight: bold; color: #2563eb; margin-top: 8px;"><%= total %></p>
    </div>

    <div style="background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%); border-radius: 12px; padding: 16px; border: 1px solid #86efac;">
      <p style="color: #64748b; font-size: 14px; font-weight: 500;">Sucesso</p>
      <p style="font-size: 28px; font-weight: bold; color: #16a34a; margin-top: 8px;"><%= success %></p>
    </div>

    <div style="background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%); border-radius: 12px; padding: 16px; border: 1px solid #fca5a5;">
      <p style="color: #64748b; font-size: 14px; font-weight: 500;">Erro</p>
      <p style="font-size: 28px; font-weight: bold; color: #dc2626; margin-top: 8px;"><%= failed %></p>
    </div>
  </div>
</div>